<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/game_row_image"
        android:layout_width="160dp"
        android:layout_height="164dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:drawingCacheQuality="auto"
        app:actualImageScaleType="fitXY"
        app:failureImage="@android:drawable/ic_lock_lock"
        app:failureImageScaleType="fitXY"
        app:roundAsCircle="false"
        app:roundBottomEnd="true"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundBottomStart="true"
        app:roundTopEnd="true"
        app:roundTopRight="true"
        app:roundTopStart="true"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/game_row_name"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/game_row_image"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/game_row_players"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginStart="-10dp"
        android:layout_toEndOf="@+id/game_row_image"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="71dp"
        android:layout_toEndOf="@+id/game_row_image"
        android:paddingLeft="10dp"
        android:text="@string/online"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:typeface="monospace"
        app:fontFamily="serif-monospace" />
</RelativeLayout>